<div class='col-md-8'>
	<div class='row'>
		<div class='col-md-6'>
			<div class='user-lang row'>
				<%= @user.first_lang %> Level: <%= @user.lang_level_name(:first) %>
			</div>
			<div class='user-lang row'>
				<%= @user.second_lang %> Level: <%= @user.lang_level_name(:second) %>
			</div>
			<a class='positive' data-toggle="collapse" data-parent="#accordion" href="#collapseOne1">
				<div class='plus-completed-topics-and-reviews'>
					+
				</div>
			</a>
			<div id="collapseOne1" class="panel-collapse collapse in">
			  <div class="panel-body">
			    <div id="positive-reviews">
			    	<% if @rev1.any? %>
							<% @rev1.each do |x| %>
							<%= simple_format (x), class: 'positive-user-reviews' %>
						<% end %>
						<% else %>
							None!<br />
						<% end %>
					</div>
			  </div>
			</div>
		</div>
		<div class='col-md-6'>
			<a class='completed-topics-and-reviews'>
				Reviews
		  </a>
		 		<a class='negative' data-toggle="collapse" data-parent="#accordion" href="#collapseOne2">
				<div class='plus-completed-topics-and-reviews'>
					-
				</div>
			</a>
			<div id="collapseOne2" class="panel-collapse collapse in">
			  <div class="panel-body">
			    <div id="negative-reviews">
			     	<% if @rev2.any? %>
							<% @rev2.each do |x| %>
							<%= simple_format (x), class: 'profile list-group-item' %>
							<% end %>
							<% else %>
							None!<br />
							<% end %>
					</div>
			  </div>
			</div>
		</div>
	</div>

	</div>
</div>

