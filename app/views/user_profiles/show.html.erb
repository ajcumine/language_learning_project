<div class="col-md-3">
	<div class='row'>
		<div class='main-label-buttons'>

		<button class="glyphicon glyphicon-pencil btn update-button-profile-edit-page" 	data-toggle="modal" data-target="#myModal"><br>
		<span class='button-label'>Message</span>
		</button>
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby	="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
			  <div class="modal-content">	
			    <div class="modal-header">
				    <button type="button" class="close" data-dismiss="modal" aria-hidden="	true">&times;</button>
				    <h4 class="modal-title" id="myModalLabel">Message to <%= @user.	first_name %> 
				    </h4>
				    </div>
				    <div class="modal-body">
				     	<%= render :partial => 'messages/new' %> 
				    </div>
				  </div>
				</div>
			</div>
		<button class="glyphicon glyphicon-pushpin btn update-button-profile-edit-page" 	data-toggle="modal" data-target="#myModal2"><br>
		<span> Book</span>
		</button>
		<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-	labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
		 		<div class="modal-content">	
		   		<div class="modal-header">
		   			<button type="button" class="close" data-dismiss="modal" aria-hidden="	true">&times;
		   			</button>
			      <h4 class="modal-title" id="myModalLabel">Book a lesson with <%= @user.first_name %>
			      </h4>
				  </div>
				  <div class="modal-body">
				    <%= render :partial => 'bookings/form' %> 
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>
	<div class='profile-info'>
		<%= image_tag @user.picture.url(:medium) %>
		<br>
			<% if @user.user_profile %>
  		<% if @user.first_name && @user.last_name %>
	  	<dt>Name:</dt> <dd><%= @user.first_name + " " + @user.last_name %></dd>
	  	<% end %>
	  	<dt>Location:</dt> <dd>London</dd> 
	  	<% if @user.native_lang %>
	  	<dt>Native Language:</dt> <dd><%= @user.native_lang %></dd> 
	  	<% end %> 
	  	<% if @user.first_lang %>
	  	<dt>Looking To Learn:</dt> <dd><%= @user.first_lang %></dd>
	  	<% end %>
	  	<% if @user.email %>
	  	<dt>Email:</dt> <dd><%= @user.email %></dd> 
	  	<% end %>
		<% end %>
	</div>
</div>
<div class="col-md-3">
	<div id="completed-topics">




		<h3> <%= @user.first_name %> has discussed the following topics:</h3>
		Topics Discussed:
			<% if @completed_topics.any? %>
				<% @completed_topics.each do |x| %> <br />
					<%= simple_format (x), class: 'list-group-item' %>
				<% end %>
				<% else %>
				None!<br />
			<% end %>
		Average Score: <%= @average_score %>
	</div>
</div>
<div class="col-md-3">
	<div id="calendar">
	</div>
</div>






	