<h2 class="edit-profile-titles">ACCOUNT SETTINGS</h2>
<%= form_for(current_user, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<form class="form-horizontal" role="form">
  <table style='width:' class ="sign-in-table"> 
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email, autofocus: true, :type=> "text", :class => 'form-control' %></td>
    </tr>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <tr>
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </tr>
    <% end %>
    <tr>
      <td><%= f.label :password %> </td>
      <td><%= f.password_field :password, autocomplete: "off", :type=> "text", :class => 'form-control' %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "off", :type=> "text", :class => 'form-control' %></td>
    </tr>
    <tr>
      <td><%= f.label :current_password %> </td>
      <td><%= f.password_field :current_password, autocomplete: "off", :type=> "text", :class => 'form-control' %></td>
    </tr>
  </table>
  <br>
<i>(we need your current password to confirm your changes)</i><br>
<i>(leave your password blank if you don't want to change it)</i>
  <br>
  <table style='width: 440px' class ="sign-in-table"> 
    <tr>
     <td> <%= f.submit "Update", :class => 'btn update-button-profile-edit-page' %></td>
     <td> <%= button_to "Deactivate account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn update-button-profile-edit-page' %></td>
   <% end %>
 </table>
</form>
